CREATE TRIGGER TR1
    AFTER UPDATE OF C2 ON T1
    REFERENCING NEW AS NEW
    FOR EACH ROW
    MODE DB2SQL
    WHEN (NEW.C2 < 0.10 * NEW.C3)
      BEGIN ATOMIC
        VALUES(F1(NEW.C3 - NEW.C2, NEW.C1));
      END
;

CREATE TRIGGER TR1
    AFTER UPDATE OF C2, C3 ON T1
    REFERENCING NEW AS NEW
    FOR EACH ROW
    MODE DB2SQL
    WHEN (NEW.C2 < 0.10 * NEW.C3)
      BEGIN ATOMIC
        VALUES(F1(NEW.C3 - NEW.C2, NEW.C1));
      END
;

CREATE TRIGGER TR1
    AFTER UPDATE OF C2, C3 ON T1
    REFERENCING NEW AS NEW
    FOR EACH STATEMENT
    MODE DB2SQL
      BEGIN ATOMIC
        SELECT F1(C3 - C2, C1)
          FROM T1
          WHERE (C2 < 0.10 * C3);
      END
;

CREATE TRIGGER TR1
    AFTER UPDATE OF C4 ON T2
    REFERENCING OLD AS OLD_T2
                NEW AS NEW_T2
    FOR EACH ROW
    MODE DB2SQL
    WHEN (NEW_T2.C4 > (OLD_T3.C4 * 1.20))
      BEGIN ATOMIC
        SIGNAL SQLSTATE '75001' ('Invalid Increase - Exceeds 20%');
      END
;
