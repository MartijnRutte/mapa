
--#SET TERMINATOR @

CREATE OR REPLACE TRIGGER TRIG001
  BEFORE INSERT ON T1
  REFERENCING NEW AS NEW
  FOR EACH ROW
  WHEN (NEW.C1 IS NULL OR NEW.C1 > '20:30')
  BEGIN
    SIGNAL SQLSTATE VALUE '314159'
      ('testing, testing, 1, 2, 3');
  END
@

CREATE OR REPLACE TRIGGER TRIG002
  BEFORE INSERT ON T1
  REFERENCING NEW AS NEW
  FOR EACH ROW
  WHEN (NEW.C1 IS NULL OR NEW.C1 > '20:30')
  BEGIN
    SIGNAL SQLSTATE VALUE '314159'
      SET MESSAGE_TEXT = 'testing, testing, 1, 2, 3';
  END
@

CREATE OR REPLACE TRIGGER TRIG002
  BEFORE INSERT ON T1
  REFERENCING NEW AS NEW
  FOR EACH ROW
  WHEN (NEW.C1 IS NULL OR NEW.C1 > '20:30')
  BEGIN
    CASE X
    WHEN 4 THEN
      SIGNAL SQLSTATE VALUE '314159'
        SET MESSAGE_TEXT = TXT;
    END
    CASE
    ;
  END
@


