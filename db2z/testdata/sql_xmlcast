
CREATE VIEW V1 AS 
  SELECT 
      C1 AS COLUMN1
    , DATE(XMLCAST(XMLQUERY('stuff "more stuff";/even more stuff'
      PASSING XML_HDR) AS TIMESTAMP)) AS COLUMN2
    , DEC(SUBSTR(C3,10,10), 10, 0) AS COLUMN3
  FROM T1
;

SELECT 
    XMLCAST('123' AS DECIMAL)
FROM SYSIBM.SYSDUMMY1
;

SELECT 
    XMLCAST(CURRENT TIMESTAMP AS TIMESTAMP)
FROM SYSIBM.SYSDUMMY1
;

SELECT 
    DATE(XMLCAST(CURRENT TIMESTAMP AS TIMESTAMP))
FROM SYSIBM.SYSDUMMY1
;

SELECT 
    DATE(XMLCAST((SELECT CURRENT TIMESTAMP FROM SYSIBM.SYSDUMMY1) AS TIMESTAMP))
FROM SYSIBM.SYSDUMMY1
;


