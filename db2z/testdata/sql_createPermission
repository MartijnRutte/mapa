CREATE PERMISSION SALARY_ROW_ACCESS ON EMPLOYEE
   FOR ROWS WHERE 
      VERIFY_USER_GROUP(SESSION_USER,'MGMT','ACC') = 0
      AND
      EMP_TYPE <> 0
   ENFORCED FOR ALL ACCESS
   ENABLE
;

CREATE PERMISSION SALARY_ROW_ACCESS ON EMPLOYEE AS E
   FOR ROWS WHERE 
      VERIFY_USER_GROUP(SESSION_USER,'MGMT','ACC') = 0
      AND
      E.MP_TYPE <> 0
   ENFORCED FOR ALL ACCESS
   ENABLE
;

CREATE PERMISSION SALARY_ROW_ACCESS ON EMPLOYEE E
   FOR ROWS WHERE 
      VERIFY_USER_GROUP(SESSION_USER,'MGMT','ACC') = 0
      AND
      E.EMP_TYPE <> 0
   ENFORCED FOR ALL ACCESS
   ENABLE
;

CREATE PERMISSION DOUBLE_SECRET ON STUFF S1 FOR ROWS WHERE
   0 <> (SELECT COUNT(*) FROM SECRET_STUFF S2 WHERE S2.KEY = S1.KEY)
ENFORCED FOR ALL ACCESS
ENABLE
;

