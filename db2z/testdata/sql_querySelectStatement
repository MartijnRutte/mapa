SELECT * FROM FARSCAPE.STUFF;

SELECT * FROM FARSCAPE.STUFF
      ORDER BY DATE;

SELECT DEPT, AVG(SALARY)
     FROM FARSCAPE.STUFF
     GROUP BY DEPT
     ORDER BY 2;

EXEC SQL
     DECLARE UPDATE_CSR CURSOR FOR
     SELECT DEPT, NB, SALARY, BONUS, COMM
       FROM FARSCAPE.STUFF
       WHERE DEPT IN ('D11','D21')
       FOR UPDATE
END-EXEC

EXEC SQL
     SELECT MAX(BONUS), MIN(BONUS), AVG(BONUS)
       INTO :WS-MAX, :WS-MIN, :WS-AVG
       FROM FARSCAPE.STUFF
       WITH UR
       QUERYNO 23
END-EXEC

EXEC SQL
     DECLARE C1 CURSOR FOR
     SELECT * FROM X.RMT_TAB
     OPTIMIZE FOR 50 ROWS
     FOR READ ONLY
END-EXEC

EXEC SQL
     DECLARE C1 CURSOR FOR
     SELECT * FROM X.RMT_TAB
     FETCH FIRST 50 ROWS ONLY
END-EXEC

EXEC SQL
     DECLARE CS1 CURSOR FOR
     SELECT ROWID
     FROM FINAL TABLE
       (INSERT INTO FARSCAPE.THINGS
        (NB)
        SELECT NB FROM FARSCAPE.STUFF)
     FETCH FIRST 5 ROWS ONLY
END-EXEC


